<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSparxRed</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="Screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="HomeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_home_black_24dp</item>
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorSparxRed</item>
    </style>

    <style name="BigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:backgroundTint">@color/colorSparxRed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SectionText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">70sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="NormalTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">323dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">0.92</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CheckBoxTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">0.22</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="RadioTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="LongEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="ShortEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">0.92</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:ems">10</item>
    </style>

    <style name="MultiShortEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_weight">0.92</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:ems">10</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.,;012345678 9 </item>
    </style>

    <style name="MultiLongEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_weight">0.14</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:ems">10</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="YesNoToggle" parent="android:Widget.DeviceDefault.Button.Toggle">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textOff">@string/no</item>
        <item name="android:textOn">@string/yes</item>
        <item name="android:backgroundTint">@color/colorSparxRed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@string/toggleButton</item>
    </style>

    <style name="Checkbox" parent="android:Widget.Material.CompoundButton.CheckBox">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.14</item>
        <item name="android:buttonTint">@color/colorSparxRed</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="RadioButton" parent="android:Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/colorSparxRed</item>
    </style>

</resources>
