<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sparx1126.steamworks.MainScreen"
    android:background="@color/colorWhite">

    <requestFocus />

    <Spinner
        android:id="@+id/eventSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horiz_margin"
        android:layout_marginRight="@dimen/horiz_margin"
        android:background="@android:drawable/btn_dropdown" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/scouterText"
        android:minWidth="100px"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:textSize="35px"
        android:hint="Scouter Name"
        android:layout_above="@+id/teamText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_alignRight="@+id/benchmarkButton"
        android:layout_alignEnd="@+id/benchmarkButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/teamText"
        android:minWidth="100px"
        android:textSize="35px"
        android:hint="Team Number"
        android:completionHint=" fhg "
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/benchmarkButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number" />

    <Button
        android:text="Benchmark"
        android:id="@+id/benchmarkButton"
        android:elevation="0dp"
        android:backgroundTint="#c40000"
        android:minHeight="75dip"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_above="@+id/scoutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Scout"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:id="@+id/scoutButton"
        android:elevation="0dp"
        android:backgroundTint="#C40000"
        android:minHeight="75dip"
        android:textSize="22sp"
        android:textColor="@color/colorWhite"
        android:layout_above="@+id/viewButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/benchmarkButton"
        android:layout_alignEnd="@+id/benchmarkButton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:text="View"
        android:layout_width="wrap_content"
        android:id="@+id/viewButton"
        android:elevation="0dp"
        android:minHeight="75dip"
        android:textSize="22sp"
        android:backgroundTint="@color/colorSparxRed"
        android:textColor="@color/colorWhite"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scoutButton"
        android:layout_alignEnd="@+id/scoutButton" />

</RelativeLayout>
