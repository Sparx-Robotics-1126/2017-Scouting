<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sparx1126.steamworks.MainScreen" >

    <requestFocus />

    <Spinner
        android:id="@+id/eventSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horiz_margin"
        android:layout_marginRight="@dimen/horiz_margin"
        android:background="@android:drawable/btn_dropdown" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/scouterText"
        android:minWidth="100dp"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:textSize="35sp"
        android:hint="@string/scouterName"
        android:layout_above="@+id/teamText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/teamText"
        android:minWidth="100dp"
        android:textSize="35sp"
        android:hint="@string/teamNumber"
        android:completionHint=" fhg "
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/benchmarkButton"
        android:layout_alignParentStart="true"
        android:inputType="number" />

    <Button
        android:text="@string/benchmark"
        android:id="@+id/benchmarkButton"
        android:elevation="0dp"
        android:backgroundTint="#c40000"
        android:minHeight="75dip"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_above="@+id/scoutButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/scout"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/scoutButton"
        android:elevation="0dp"
        android:backgroundTint="#C40000"
        android:minHeight="75dip"
        android:textSize="22sp"
        android:textColor="@color/colorWhite"
        android:layout_above="@+id/viewButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/benchmarkButton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:text="@string/view"
        android:layout_width="wrap_content"
        android:id="@+id/viewButton"
        android:elevation="0dp"
        android:minHeight="75dip"
        android:textSize="22sp"
        android:backgroundTint="@color/colorSparxRed"
        android:textColor="@color/colorWhite"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scoutButton" />

</RelativeLayout>
