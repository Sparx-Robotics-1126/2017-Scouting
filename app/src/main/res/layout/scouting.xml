                android:id="@+id/numberOfGearsFromHumanText"
                android:layout_marginEnd="20dp"
                android:layout_height="85dp"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:text="Number Of Gears Collected From Human" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numberOfGearsFromHumanInput"
                android:layout_weight="0.92"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:text="Fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fuelHeadline"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="50sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="323dp"
                android:id="@+id/numberOfBallsScoredHighGoalText"
                android:layout_weight="0.73"
                android:layout_marginEnd="20dp"
                android:layout_height="87dp"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:text="Number Of Balls Scored In A High Goal Cycle" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numberOfBallsScoredHighGoalInput"
                android:layout_weight="0.92"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:layout_width="323dp"
            android:id="@+id/numberOfHighGoalCyclesText"
            android:layout_weight="0.73"
            android:layout_marginEnd="20dp"
            android:layout_height="87dp"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:text="Number Of Balls Scored In A High Goal Cycle" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numberOfHighGoalCyclesInput"
                android:layout_weight="0.92"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.48">

            <TextView
                android:layout_width="323dp"
                android:id="@+id/timesCollectedFromHumanText"
                android:layout_marginEnd="20dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:text="Number Of Times Collected Balls From Human" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/timesCollectedFromHumanInput"
                android:layout_weight="0.51"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="323dp"
                android:id="@+id/timesCollectedFromHopperText"
                android:layout_weight="0.73"
                android:layout_marginEnd="20dp"
                android:layout_height="87dp"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:text="Number Of Times Collected Balls From Hopper" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/timesCollectedFromHopperInput"
                android:layout_weight="0.92"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="323dp"
                android:id="@+id/timesCollectedFromFloorText"
                android:layout_weight="0.73"
                android:layout_marginEnd="20dp"
                android:layout_height="87dp"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:text="Number Of Times Collected Balls From Floor" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/timesCollectedFromFloorInput"
                android:layout_weight="0.92"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="323dp"
                android:id="@+id/fuelScoredLowGoalCycleText"
                android:layout_marginEnd="20dp"
                android:layout_height="87dp"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:text="Approximate Fuel Scored In A Low Goal Cycle" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="72dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/fuelScoredLowGoalCycleInput"
                android:layout_weight="0.92"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

