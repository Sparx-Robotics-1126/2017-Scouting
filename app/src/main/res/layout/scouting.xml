<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="122dp">

            <ImageButton
                app:srcCompat="@drawable/ic_home_black_24dp"
                android:layout_weight="0.14"
                android:tint="@color/colorWhite"
                android:backgroundTint="@color/colorSparxRed"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:minWidth="100dp"
                android:maxWidth="100dp"
                android:layout_width="0dp"
                android:contentDescription="@string/home"
                android:id="@+id/home_scouting" />

        </LinearLayout>

    <!-- Begin Auto Section -->
    <TextView
        android:text="@string/autoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoHeadline"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="70sp"
        android:layout_marginBottom="10dp" />


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="323dp"
                android:id="@+id/crossedBaseLineAutoText"
                android:layout_weight="0.92"
                android:layout_marginEnd="20dp"
                android:layout_height="40dp"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:text="@string/crossedBase" />

            <ToggleButton
                android:text="@string/toggleButton"
                android:layout_height="72dp"
                android:id="@+id/crossedBaseLineAutoInput"
                android:layout_width="130dp"
                android:textOff="@string/no"
                android:textOn="@string/yes"
                android:backgroundTint="@color/colorSparxRed"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:layout_width="323dp"
            android:id="@+id/hoppersDumpedAutoText"
            android:layout_weight="0.92"
            android:layout_marginEnd="20dp"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:text="Number of Hoppers Dumped" />

        <EditText
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/hoppersDumpedAutoInput"
            android:layout_weight="0.92"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:textSize="30sp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:layout_width="96dp"
            android:id="@+id/radioDeliveredGearAutoInput"
            android:layout_marginEnd="20dp"
            android:layout_height="122dp"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:text="Gears scored in"
            android:layout_weight="0.13" />

        <CheckBox
            android:text="Left"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:id="@+id/putGearLeftAuto"
            app:buttonTint="@color/colorSparxRed"
            style="@android:style/Widget.Material.CompoundButton.CheckBox"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <CheckBox
            android:text="Center"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:id="@+id/putGearCenterAuto"
            android:layout_weight="0.14"
            app:buttonTint="@color/colorSparxRed"
            style="@android:style/Widget.Material.CompoundButton.CheckBox"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

        <CheckBox
            android:text="Right"
            android:layout_height="wrap_content"
            android:id="@+id/putGearRightAuto"
            android:layout_weight="0.11"
            android:layout_width="85dp"
            app:buttonTint="@color/colorSparxRed"
            style="@android:style/Widget.Material.CompoundButton.CheckBox"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

        <CheckBox
            android:text="None"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:id="@+id/putGearNoAuto"
            app:buttonTint="@color/colorSparxRed"
            style="@android:style/Widget.Material.CompoundButton.CheckBox"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/scoresHighAutoText"
            android:layout_marginEnd="20dp"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:text="Scores High?"
            android:layout_width="160dp"
            android:layout_height="72dp" />

        <RadioGroup
            android:id="@+id/scoresHighAutoGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/scoresHighNeverAuto"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Never"
                android:buttonTint="@color/colorSparxRed"
                android:textSize="20dp"/>



        <RadioButton
        android:id="@+id/scoresHighSometimesAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sometimes"
            android:textSize="20dp"
        android:buttonTint="@color/colorSparxRed"
            android:layout_marginRight="10dp" />

        <RadioButton
        android:id="@+id/scoresHighOftenAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Often"
        android:buttonTint="@color/colorSparxRed"
        android:textSize="20dp"/>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/scoresLowAutoText"
            android:layout_marginEnd="20dp"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:text="Scores Low?"
            android:layout_width="160dp"
            android:layout_height="72dp" />

        <RadioGroup
            android:id="@+id/scoresLowAutoGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/scoresLowNeverAuto"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Never"
                android:buttonTint="@color/colorSparxRed"
                android:textSize="20dp"/>



            <RadioButton
                android:id="@+id/scoresLowSometimesAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sometimes"
                android:textSize="20dp"
                android:buttonTint="@color/colorSparxRed"
                android:layout_marginRight="10dp" />

            <RadioButton
                android:id="@+id/scoresLowOftenAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Often"
                android:buttonTint="@color/colorSparxRed"
                android:textSize="20dp"/>

        </RadioGroup>
    </LinearLayout>
<!-- Begin Teleop Section -->

